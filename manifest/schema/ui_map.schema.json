{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "type":"object",
  "required":["forms"],
  "properties":{
    "forms":{
      "type":"array",
      "minItems": 0,
      "items":{
        "type":"object",
        "required":["name","controls"],
        "properties":{
          "name":{"type":"string"},
          "controls":{
            "type":"array",
            "minItems": 0,
            "items":{
              "type":"object",
              "required":["name","type"],
              "properties":{
                "name":{"type":"string"},
                "type":{"type":"string"},
                "bound_range":{"type":["string","null"]},
                "events":{"type":"array","items":{"type":"string"}}
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
